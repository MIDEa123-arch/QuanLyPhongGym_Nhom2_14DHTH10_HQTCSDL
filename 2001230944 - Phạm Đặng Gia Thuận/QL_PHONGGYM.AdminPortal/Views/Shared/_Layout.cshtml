    <script>
        // Khởi tạo icons
        lucide.createIcons();

        // Cập nhật ngày
        document.getElementById('current-date').textContent =
            new Date().toLocaleDateString('vi-VN', { dateStyle: 'full' });

        // Toggle submenu
        function toggleSubmenu(element) {
            var parent = element.parentElement;
            var submenu = parent.querySelector('.nav-submenu');
            var chevron = element.querySelector('.nav-chevron');

            if (!element.classList.contains('disabled')) {
                parent.classList.toggle('open');
                if (chevron) {
                    chevron.style.transform = parent.classList.contains('open') ? 'rotate(180deg)' : 'rotate(0deg)';
                }
            }
        }

        // Highlight active menu item based on current URL
        document.addEventListener('DOMContentLoaded', function () {
            var currentPath = window.location.pathname;
            var navItems = document.querySelectorAll('.nav-item, .nav-subitem');

            navItems.forEach(function (item) {
                if (item.getAttribute('href') === currentPath) {
                    item.classList.add('active');

                    // Nếu là submenu item, mở parent
                    var parent = item.closest('.nav-group');
                    if (parent) {
                        parent.classList.add('open');
                        var chevron = parent.querySelector('.nav-chevron');
                        if (chevron) {
                            chevron.style.transform = 'rotate(180deg)';
                        }
                    }
                }
            });
        });
    </script>

