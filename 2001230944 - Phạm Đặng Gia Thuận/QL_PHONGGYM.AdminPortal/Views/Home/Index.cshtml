@{
    ViewBag.Title = "Trang Chủ";
    // Layout đã được set tự động trong _ViewStart.cshtml
}
@{
    // Đây là logic phân quyền cốt lõi
    // Lấy tên đăng nhập từ "vé" (Cookie)
    string loginName = User.Identity.Name;

    // Dựa vào Tên đăng nhập (theo SQL script) để quyết định Role
    string role = "Guest";
    if (loginName == "GymAdminLogin" || loginName == "GymManagerLogin")
    {
        role = "Manager";
    }
    else if (loginName == "GymStaffLogin")
    {
        role = "Staff";
    }
}

<!-- 1. Header Chào Mừng -->
<div class="page-header">
    <div class="welcome-content">
        <h2>Xin chào, <span class="highlight-name">@ViewBag.LoginName</span> ! 👋</h2>
        <p>Đây là tổng quan hoạt động hôm nay - <span class="current-date" id="headerDate"></span></p>
    </div>
    <div class="header-actions">
        <button class="btn-primary" onclick="refreshStats()">
            <i data-lucide="refresh-cw"></i>
            <span>Làm mới</span>
        </button>
    </div>
</div>

<!-- 2. Lưới Thống Kê (ĐÃ LÀM ĐẸP HƠN) -->
<div class="stats-grid">

    <!-- Card 1: Check-in (Màu xanh dương) -->
    <div class="stat-card card-blue">
        <div class="stat-content">
            <div class="stat-icon-wrapper">
                <i data-lucide="user-check"></i>
            </div>
            <div class="stat-details">
                <p class="stat-title">Check-in hôm nay</p>
                <div class="stat-value-group">
                    <p class="stat-value">@ViewBag.CheckInHomNay</p>

                </div>

            </div>
        </div>
        <div class="stat-footer">
            <a href="#" class="stat-link">
                Xem chi tiết <i data-lucide="arrow-right"></i>
            </a>
        </div>
    </div>

    <!-- Card 2: Hóa đơn (Màu xanh lá) -->
    <div class="stat-card card-green">
        <div class="stat-content">
            <div class="stat-icon-wrapper">
                <i data-lucide="dollar-sign"></i>
            </div>
            <div class="stat-details">
                <p class="stat-title">Hóa đơn hôm nay</p>
                <div class="stat-value-group">
                    <p class="stat-value">@ViewBag.HoaDonHomNay</p>

                </div>

            </div>
        </div>
        <div class="stat-footer">
            <a href="#" class="stat-link">
                Xem chi tiết <i data-lucide="arrow-right"></i>
            </a>
        </div>
    </div>

    <!-- Card 3: Đăng ký (Màu tím) -->
    <div class="stat-card card-purple">
        <div class="stat-content">
            <div class="stat-icon-wrapper">
                <i data-lucide="user-plus"></i>
            </div>
            <div class="stat-details">
                <p class="stat-title">Đăng ký mới</p>
                <div class="stat-value-group">
                    <p class="stat-value">@ViewBag.DangKyMoi</p>

                </div>

            </div>
        </div>
        <div class="stat-footer">
            <a href="#" class="stat-link">
                Xem chi tiết <i data-lucide="arrow-right"></i>
            </a>
        </div>
    </div>

    <!-- Card 4: Tập thử (Màu cam) -->
    <div class="stat-card card-orange">
        <div class="stat-content">
            <div class="stat-icon-wrapper">
                <i data-lucide="award"></i>
            </div>
            <div class="stat-details">
                <p class="stat-title">Tập thử</p>
                <div class="stat-value-group">
                    <p class="stat-value">@ViewBag.TapThu</p>

                </div>

            </div>
        </div>
        <div class="stat-footer">
            <a href="#" class="stat-link">
                Xem chi tiết <i data-lucide="arrow-right"></i>
            </a>
        </div>
    </div>
</div>

