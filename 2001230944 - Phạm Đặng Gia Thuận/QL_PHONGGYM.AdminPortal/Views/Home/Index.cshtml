                        <p class="schedule-title">Zumba Dance</p>
                        <p class="schedule-info">
                            <i data-lucide="user"></i> PT: Nguyễn Minh Hoàng
                        </p>
                        <p class="schedule-info">
                            <i data-lucide="users"></i> 20/30 người
                        </p>
                    </div>
                    <span class="schedule-badge badge-scheduled">Đã lên lịch</span>
                </div>

            </div>
        </div>
    </div>

</div>

<!-- 4. Quick Actions -->
