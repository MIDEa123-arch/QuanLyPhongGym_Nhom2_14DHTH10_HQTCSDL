        {
            <a href="@Url.Action("Create", "KhachHangs")" class="action-card">
                <i data-lucide="user-plus"></i>
                <span>Đăng ký KH mới</span>
            </a>
        }
        else
        {
            <a href="@Url.Action("Index", "KhachHangs")" class="action-card">
                <i data-lucide="user-plus"></i>
