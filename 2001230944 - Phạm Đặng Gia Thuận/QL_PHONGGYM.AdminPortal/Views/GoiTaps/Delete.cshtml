@model QL_PHONGGYM.AdminPortal.Models.GoiTap

@{
    ViewBag.Title = "Xóa Gói Tập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .delete-container {
        max-width: 700px;
        margin: 40px auto;
        background: #ffffff;
        border-radius: 12px;
        padding: 35px 45px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
    }

    .delete-header {
        background: #5dade2;
        color: white;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
        text-align: center;
    }

        .delete-header h2 {
            margin: 0;
            font-weight: 500;
            font-size: 24px;
        }

    .delete-warning {
        background: #eaf2fb;
        color: #21618c;
        padding: 15px;
        border-left: 5px solid #5dade2;
        border-radius: 6px;
        margin-bottom: 25px;
        font-weight: 500;
        text-align: center;
    }

    .delete-item {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid #e9ecef;
        padding: 12px 0;
        margin-bottom: 10px;
    }

        .delete-item strong {
            color: #1a5276;
            font-weight: 600;
            min-width: 200px;
        }

    .delete-value {
        color: #2c3e50;
        flex: 1;
        text-align: right;
        word-wrap: break-word;
    }

    .delete-actions {
        text-align: right;
        margin-top: 30px;
    }

    .btn-delete {
        background: #5dade2;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.3s;
    }

        .btn-delete:hover {
            background: #3498db;
            color: white;
        }

    .btn-cancel {
        background: #95a5a6;
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 6px;
        font-weight: 500;
        margin-left: 10px;
        transition: all 0.3s;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background: #7f8c8d;
            color: white;
        }
</style>

<div class="delete-container">
    <div class="delete-header">
        <h2>🗑️ Xóa Gói Tập</h2>
    </div>

    <div class="delete-warning">
        ⚠️ Bạn có chắc chắn muốn xóa gói tập này không? Hành động này sẽ không thể hoàn tác.
    </div>

    <div class="delete-item">
        <strong>Tên Gói:</strong>
        <span class="delete-value">@Model.TenGoi</span>
    </div>

    <div class="delete-item">
        <strong>Thời Hạn:</strong>
        <span class="delete-value">@Model.ThoiHan</span>
    </div>

    <div class="delete-item">
        <strong>Giá:</strong>
        <span class="delete-value">@String.Format("{0:N0} VNĐ", Model.Gia)</span>
    </div>

    <div class="delete-item">
        <strong>Mô Tả:</strong>
        <span class="delete-value">@Model.MoTa</span>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="delete-actions">
            <input type="submit" value="🗑️ Xóa" class="btn-delete" />
            @Html.ActionLink("⬅️ Quay Lại", "Index", null, new { @class = "btn-cancel" })
        </div>
    }
</div>
