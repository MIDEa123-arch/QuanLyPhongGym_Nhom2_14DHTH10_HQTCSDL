@model QL_PHONGGYM.AdminPortal.Models.ChuyenMon

@{
    ViewBag.Title = "Thêm Chuyên Môn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container-custom {
        padding: 30px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        background: #5dade2;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .page-header h2 {
        color: white;
        margin: 0;
        font-weight: 500;
        font-size: 26px;
    }

    .form-container {
        background: white;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        max-width: 700px;
        margin: 0 auto;
    }

    .form-title {
        color: #5dade2;
        font-size: 20px;
        font-weight: 500;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #5dade2;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        color: #333;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control {
        width: 100%;
        padding: 10px 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        transition: border-color 0.3s;
    }

    .form-control:focus {
        outline: none;
        border-color: #5dade2;
        box-shadow: 0 0 0 3px rgba(93, 173, 226, 0.1);
    }

    textarea.form-control {
        min-height: 100px;
        resize: vertical;
    }

    .text-danger {
        color: #dc3545;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .btn-submit {
        background: #5dade2;
        color: white;
        padding: 12px 40px;
        border: none;
        border-radius: 5px;
        font-size: 15px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-submit:hover {
        background: #3498db;
    }

    .btn-back {
        background: #6c757d;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.3s;
        margin-top: 15px;
    }

    .btn-back:hover {
        background: #5a6268;
        color: white;
        text-decoration: none;
    }

    .button-group {
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

    @@media (max-width: 768px) {
        .form-container {
            padding: 20px;
        }

        .page-header {
            padding: 20px;
        }

        .page-header h2 {
            font-size: 22px;
        }
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h2>Thêm Chuyên Môn Mới</h2>
    </div>

    <div class="form-container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h4 class="form-title">Thông Tin Chuyên Môn</h4>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.TenChuyenMon, "Tên chuyên môn")
                @Html.EditorFor(model => model.TenChuyenMon, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên chuyên môn" } })
                @Html.ValidationMessageFor(model => model.TenChuyenMon, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MoTa, "Mô tả")
                @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", placeholder = "Nhập mô tả về chuyên môn" })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>

            <div class="button-group">
                <button type="submit" class="btn-submit">Tạo Mới</button>
                @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn-back" })
            </div>
        }
    </div>
</div>