@model IEnumerable<QL_PHONGGYM.AdminPortal.Models.NhanVienChuyenMon>

@{
    ViewBag.Title = "Gán Chuyên Môn Cho Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .page-container {
        background: linear-gradient(180deg, #E3F2FD 0%, #FFFFFF 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }

    .content-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(100, 181, 246, 0.15);
        overflow: hidden;
        border: none;
    }

    .card-header {
        background: linear-gradient(135deg, #64B5F6 0%, #42A5F5 100%);
        padding: 2rem;
        color: white;
    }

    .card-title {
        margin: 0;
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .card-header p {
        margin: 0;
        opacity: 0.95;
        font-size: 0.95rem;
    }

    .toolbar-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        gap: 15px;
        flex-wrap: wrap;
        background: linear-gradient(135deg, #E3F2FD 0%, #F5F9FF 100%);
        border-bottom: 2px solid #BBDEFB;
    }

    .search-form {
        display: flex;
        gap: 10px;
        background: white;
        padding: 8px 15px;
        border-radius: 10px;
        border: 2px solid #BBDEFB;
        flex-grow: 1;
        max-width: 400px;
        transition: all 0.3s ease;
    }

    .search-form:focus-within {
        border-color: #64B5F6;
        box-shadow: 0 0 0 0.2rem rgba(100, 181, 246, 0.25);
    }

    .search-input {
        border: none;
        outline: none;
        padding: 8px;
        width: 100%;
        font-size: 14px;
        background: transparent;
        color: #333;
    }

    .search-input::placeholder {
        color: #90CAF9;
    }

    .btn-search-icon {
        background: none;
        border: none;
        color: #42A5F5;
        font-size: 20px;
        cursor: pointer;
        transition: all 0.3s;
        padding: 0 5px;
    }

    .btn-search-icon:hover {
        color: #1E88E5;
        transform: scale(1.1);
    }

    .card-toolbar .btn-primary {
        background: linear-gradient(135deg, #42A5F5 0%, #1E88E5 100%);
        color: white;
        padding: 10px 25px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s;
        border: none;
        box-shadow: 0 4px 12px rgba(66, 165, 245, 0.3);
    }

    .card-toolbar .btn-primary:hover {
        background: linear-gradient(135deg, #1E88E5 0%, #1565C0 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(66, 165, 245, 0.4);
        text-decoration: none;
        color: white;
    }

    .table-custom {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin: 0;
    }

    .table-custom thead {
        background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
    }

    .table-custom thead th {
        padding: 1rem 1.5rem;
        text-align: left;
        font-weight: 700;
        color: #1565C0;
        border-bottom: 3px solid #64B5F6;
        font-size: 0.95rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .table-custom tbody tr {
        transition: all 0.3s ease;
        border-bottom: 1px solid #E3F2FD;
    }

    .table-custom tbody tr:hover {
        background: linear-gradient(135deg, #F5F9FF 0%, #E3F2FD 100%);
        transform: scale(1.01);
        box-shadow: 0 2px 8px rgba(100, 181, 246, 0.15);
    }

    .table-custom tbody td {
        padding: 1.25rem 1.5rem;
        color: #424242;
        font-size: 0.95rem;
    }

    .action-links {
        display: flex;
        gap: 10px;
        align-items: center;
    }

    .btn-edit, .btn-details, .btn-delete {
        padding: 6px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.875rem;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        border: none;
    }

    .btn-edit {
        background: linear-gradient(135deg, #64B5F6 0%, #42A5F5 100%);
        color: white;
    }

    .btn-edit:hover {
        background: linear-gradient(135deg, #42A5F5 0%, #1E88E5 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(66, 165, 245, 0.3);
        color: white;
        text-decoration: none;
    }

    .btn-details {
        background: linear-gradient(135deg, #81C784 0%, #66BB6A 100%);
        color: white;
    }

    .btn-details:hover {
        background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(102, 187, 106, 0.3);
        color: white;
        text-decoration: none;
    }

    .btn-delete {
        background: linear-gradient(135deg, #E57373 0%, #EF5350 100%);
        color: white;
    }

    .btn-delete:hover {
        background: linear-gradient(135deg, #EF5350 0%, #E53935 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(239, 83, 80, 0.3);
        color: white;
        text-decoration: none;
    }

    .empty-state {
        text-align: center;
        padding: 60px 30px;
        color: #90A4AE;
    }

    .empty-state i {
        font-size: 4rem;
        color: #BBDEFB;
        margin-bottom: 1rem;
        display: block;
    }

    .empty-state p {
        font-size: 1.1rem;
        margin: 0;
    }

    .clear-search {
        display: flex;
        align-items: center;
        color: #E57373;
        text-decoration: none;
        margin-left: 5px;
        padding: 0 5px;
        transition: all 0.3s;
    }

    .clear-search:hover {
        color: #EF5350;
        transform: scale(1.2);
    }

    @@media (max-width: 768px) {
        .toolbar-container {
            flex-direction: column;
            align-items: stretch;
        }

        .search-form {
            max-width: 100%;
        }

        .action-links {
            flex-direction: column;
            gap: 5px;
        }

        .btn-edit, .btn-details, .btn-delete {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<div class="page-container">
    <div class="container">
        <div class="content-card">
            <div class="card-header">
                <h2 class="card-title">
                    <i class="bi bi-people-fill me-2"></i>Quản Lý Gán Chuyên Môn
                </h2>
                <p>Đây là danh sách các chuyên môn đã được gán cho nhân viên.</p>
            </div>

            <!-- KHU VỰC TOOLBAR (TÌM KIẾM + THÊM MỚI) -->
            <div class="toolbar-container">
                <!-- Form Tìm Kiếm -->
                @using (Html.BeginForm("Index", "NhanVienChuyenMons", FormMethod.Get, new { @class = "search-form" }))
                {
                    <input type="text"
                           name="searchString"
                           class="search-input"
                           placeholder="🔍 Tìm theo tên chuyên môn..."
                           value="@Request.QueryString["searchString"]" />
                    <button type="submit" class="btn-search-icon">
                        <i class="uil uil-search"></i>
                    </button>
                    if (!string.IsNullOrEmpty(Request.QueryString["searchString"]))
                    {
                        <a href="@Url.Action("Index")" class="clear-search" title="Xóa tìm kiếm">
                            <i class="uil uil-times"></i>
                        </a>
                    }
                }

                <div class="card-toolbar">
                    @Html.ActionLink("Gán Chuyên Môn Mới", "Create", null, new { @class = "btn btn-primary" })
                </div>
            </div>

            <table class="table-custom">
                <thead>
                    <tr>
                        <th>
                            <i class="bi bi-person me-2"></i>@Html.DisplayNameFor(model => model.NhanVien.TenNV)
                        </th>
                        <th>
                            <i class="bi bi-gear me-2"></i>@Html.DisplayNameFor(model => model.ChuyenMon.TenChuyenMon)
                        </th>
                        <th>
                            <i class="bi bi-lightning me-2"></i>Thao Tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="3">
                                <div class="empty-state">
                                    <i class="bi bi-inbox"></i>
                                    <p>Không tìm thấy kết quả phù hợp.</p>
                                </div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.NhanVien.TenNV)</strong>
                                </td>
                                <td>
                                    <span style="color: #1976D2; font-weight: 500;">
                                        @Html.DisplayFor(modelItem => item.ChuyenMon.TenChuyenMon)
                                    </span>
                                </td>
                                <td class="action-links">
                                    @Html.ActionLink("✏️ Sửa", "Edit", new { MaNV = item.MaNV, MaCM = item.MaCM }, new { @class = "btn-edit" })
                                    @Html.ActionLink("📄 Chi tiết", "Details", new { MaNV = item.MaNV, MaCM = item.MaCM }, new { @class = "btn-details" })
                                    @Html.ActionLink("🗑️ Xóa", "Delete", new { MaNV = item.MaNV, MaCM = item.MaCM }, new { @class = "btn-delete" })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>