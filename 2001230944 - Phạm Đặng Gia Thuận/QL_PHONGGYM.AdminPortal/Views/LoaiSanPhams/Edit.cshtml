@model QL_PHONGGYM.AdminPortal.Models.LoaiSanPham

@{
    ViewBag.Title = "Chỉnh sửa loại sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <div class="page-header">
        <h2>Chỉnh sửa loại sản phẩm</h2>
        @Html.ActionLink("← Quay lại danh sách", "Index", null, new { @class = "btn-back" })
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-section">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaLoaiSP)

            <div class="form-group">
                @Html.LabelFor(model => model.TenLoaiSP, "Tên loại sản phẩm", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.TenLoaiSP, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên loại sản phẩm..." } })
                @Html.ValidationMessageFor(model => model.TenLoaiSP, "", new { @class = "text-danger" })
            </div>

            <div class="form-actions">
                <input type="submit" value="Lưu thay đổi" class="btn-save" />
                @Html.ActionLink("Hủy", "Index", null, new { @class = "btn-cancel" })
            </div>
        </div>
    }
</div>

<style>
    /* --- TỔNG THỂ --- */
    body {
        background-color: #eef5ff;
        font-family: "Segoe UI", sans-serif;
        color: #1e293b;
    }

    .page-container {
        max-width: 600px;
        margin: 60px auto;
        background: #ffffff;
        border: 1px solid #dbeafe;
        border-radius: 10px;
        padding: 30px 40px;
    }

    /* --- TIÊU ĐỀ --- */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #dbeafe;
        color: #1e3a8a;
        padding: 10px 16px;
        border-radius: 6px;
        margin-bottom: 24px;
    }

        .page-header h2 {
            margin: 0;
            font-size: 18px;
            font-weight: 600;
        }

    .btn-back {
        background: #e0ecff;
        color: #1e40af;
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 14px;
        transition: background-color 0.2s;
    }

        .btn-back:hover {
            background: #cfe0ff;
        }

    /* --- FORM --- */
    .form-group {
        margin-bottom: 18px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        margin-bottom: 6px;
        color: #1e3a8a;
    }

    .form-control {
        width: 100%;
        padding: 9px 12px;
        border: 1px solid #cbd5e1;
        border-radius: 6px;
        font-size: 14px;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #60a5fa;
            outline: none;
        }

    .text-danger {
        color: #dc2626;
        font-size: 13px;
        margin-top: 4px;
    }

    /* --- NÚT HÀNH ĐỘNG --- */
    .form-actions {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .btn-save {
        background-color: #3b82f6;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        cursor: pointer;
        font-weight: 500;
        font-size: 14px;
        transition: background-color 0.2s;
    }

        .btn-save:hover {
            background-color: #2563eb;
        }

    .btn-cancel {
        background-color: #e5e7eb;
        color: #374151;
        padding: 8px 16px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        font-size: 14px;
        transition: background-color 0.2s;
    }

        .btn-cancel:hover {
            background-color: #d1d5db;
        }
</style>
