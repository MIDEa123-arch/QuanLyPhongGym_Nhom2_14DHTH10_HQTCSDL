@model QL_PHONGGYM.AdminPortal.Models.LoaiSanPham

@{
    ViewBag.Title = "Thêm loại sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <div class="page-header">
        <h2>Thêm loại sản phẩm mới</h2>
        @Html.ActionLink("← Quay lại danh sách", "Index", null, new { @class = "btn-back" })
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.TenLoaiSP, "Tên loại sản phẩm", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.TenLoaiSP, new { htmlAttributes = new { @class = "form-control input-box", placeholder = "Nhập tên loại sản phẩm..." } })
                @Html.ValidationMessageFor(model => model.TenLoaiSP, "", new { @class = "text-danger" })
            </div>

            <div class="form-actions">
                <input type="submit" value="Lưu" class="btn-save" />
                @Html.ActionLink("Hủy", "Index", null, new { @class = "btn-cancel" })
            </div>
        </div>
    }
</div>

<style>
    /* --- BỐ CỤC --- */
    body {
        background-color: #eef5ff;
        font-family: "Segoe UI", sans-serif;
    }

    .page-container {
        max-width: 600px;
        margin: 60px auto;
        background: #ffffff;
        border: 1px solid #dbeafe;
        border-radius: 10px;
        padding: 35px 40px;
    }

    /* --- HEADER --- */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #e0f2fe;
        color: #0369a1;
        padding: 10px 16px;
        border-radius: 6px;
        margin-bottom: 24px;
    }

        .page-header h2 {
            margin: 0;
            font-size: 18px;
            font-weight: 600;
        }

    .btn-back {
        background: #fff;
        color: #0369a1;
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        border: 1px solid #bae6fd;
        transition: background-color 0.2s;
    }

        .btn-back:hover {
            background: #e0f2fe;
        }

    /* --- FORM BODY --- */
    .form-body {
        background: #f8fbff;
        border: 1px solid #dbeafe;
        border-radius: 8px;
        padding: 24px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: 600;
        color: #0c4a6e;
        display: block;
        margin-bottom: 6px;
    }

    .input-box {
        width: 100%;
        border: 1px solid #bfdbfe;
        border-radius: 6px;
        padding: 10px 12px;
        font-size: 15px;
        transition: 0.2s;
    }

        .input-box:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 2px #dbeafe;
            outline: none;
        }

    .text-danger {
        color: #dc2626;
        font-size: 14px;
    }

    /* --- NÚT HÀNH ĐỘNG --- */
    .form-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .btn-save {
        background-color: #3b82f6;
        color: white;
        border: none;
        padding: 8px 16px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .btn-save:hover {
            background-color: #2563eb;
        }

    .btn-cancel {
        background-color: #e5e7eb;
        color: #374151;
        text-decoration: none;
        padding: 8px 16px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        transition: background-color 0.2s;
    }

        .btn-cancel:hover {
            background-color: #d1d5db;
        }
</style>
