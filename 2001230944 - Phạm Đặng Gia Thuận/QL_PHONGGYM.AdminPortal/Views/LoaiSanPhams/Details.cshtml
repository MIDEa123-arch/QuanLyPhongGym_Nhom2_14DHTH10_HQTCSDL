@model QL_PHONGGYM.AdminPortal.Models.LoaiSanPham

@{
    ViewBag.Title = "Chi tiết loại sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <div class="page-header">
        <h2>Thông tin loại sản phẩm</h2>
        @Html.ActionLink("← Quay lại danh sách", "Index", null, new { @class = "btn-back" })
    </div>

    <div class="details-card">
        <dl>
            <dt>Tên loại sản phẩm:</dt>
            <dd>@Html.DisplayFor(model => model.TenLoaiSP)</dd>
        </dl>
    </div>

    <div class="details-actions">
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaLoaiSP }, new { @class = "btn-edit" })
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn-cancel" })
    </div>
</div>

<style>
    /* --- BỐ CỤC CHUNG --- */
    body {
        background-color: #eef5ff;
        font-family: "Segoe UI", sans-serif;
        color: #1e293b;
    }

    .page-container {
        max-width: 600px;
        margin: 60px auto;
        background: #ffffff;
        border: 1px solid #dbeafe;
        border-radius: 10px;
        padding: 30px 40px;
    }

    /* --- HEADER --- */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #dbeafe;
        color: #1e3a8a;
        padding: 10px 16px;
        border-radius: 6px;
        margin-bottom: 24px;
    }

        .page-header h2 {
            margin: 0;
            font-size: 18px;
            font-weight: 600;
        }

    .btn-back {
        background: #e0ecff;
        color: #1e40af;
        padding: 6px 12px;
        border-radius: 6px;
        text-decoration: none;
        font-size: 14px;
        transition: background-color 0.2s;
    }

        .btn-back:hover {
            background: #cfe0ff;
        }

    /* --- NỘI DUNG CHI TIẾT --- */
    .details-card {
        background-color: #f9fafb;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 20px 24px;
    }

    dl {
        margin: 0;
    }

    dt {
        font-weight: 600;
        color: #1e3a8a;
        margin-bottom: 4px;
        font-size: 15px;
    }

    dd {
        margin: 0 0 12px 0;
        color: #374151;
        font-size: 14.5px;
    }

    /* --- NÚT HÀNH ĐỘNG --- */
    .details-actions {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        margin-top: 20px;
    }

    .btn-edit {
        background-color: #3b82f6;
        color: white;
        text-decoration: none;
        padding: 8px 14px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        transition: background-color 0.2s;
    }

        .btn-edit:hover {
            background-color: #2563eb;
        }

    .btn-cancel {
        background-color: #e5e7eb;
        color: #374151;
        text-decoration: none;
        padding: 8px 14px;
        border-radius: 6px;
        font-size: 14px;
        font-weight: 500;
        transition: background-color 0.2s;
    }

        .btn-cancel:hover {
            background-color: #d1d5db;
        }
</style>
