@model QL_PHONGGYM.AdminPortal.Models.DangKyPT

@{
    ViewBag.Title = "Xóa Đăng Ký PT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .delete-card {
        background: #f0f6ff;
        padding: 25px;
        border-radius: 10px;
        border: 1px solid #d0e3ff;
        max-width: 750px;
        margin: 25px auto;
        box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    }

    .delete-title {
        font-size: 24px;
        font-weight: bold;
        color: #0a53be;
        margin-bottom: 10px;
    }

    .warning-text {
        font-size: 16px;
        font-weight: 600;
        color: #d9534f;
        margin-bottom: 15px;
    }

    .delete-table dt {
        font-weight: 600;
        color: #0d4ea6;
        width: 160px;
        padding: 8px 0;
    }

    .delete-table dd {
        margin-left: 180px;
        padding: 8px 0;
        color: #00315c;
        font-weight: 500;
    }

    .btn-delete {
        background: #dc3545;
        color: white !important;
        padding: 10px 18px;
        border-radius: 6px;
        border: none;
        cursor: pointer;
        transition: 0.2s;
    }

        .btn-delete:hover {
            background: #c82333;
        }

    .btn-back {
        background: #6c757d;
        color: white !important;
        padding: 10px 16px;
        border-radius: 6px;
        text-decoration: none;
        margin-left: 10px;
        transition: 0.2s;
    }

        .btn-back:hover {
            background: #5a6268;
        }
</style>

<div class="delete-card">
    <div class="delete-title">🗑 Xóa Đăng Ký PT</div>
    <p class="warning-text">Bạn có chắc chắn muốn xóa đăng ký PT này không?</p>
    <hr />

    <dl class="delete-table dl-horizontal">
        <dt>Khách hàng</dt>
        <dd>@Html.DisplayFor(model => model.KhachHang.TenKH)</dd>

        <dt>Nhân viên PT</dt>
        <dd>@Html.DisplayFor(model => model.NhanVien.TenDangNhap)</dd>

        <dt>Số buổi</dt>
        <dd>@Html.DisplayFor(model => model.SoBuoi)</dd>

        <dt>Giá mỗi buổi</dt>
        <dd>@Html.DisplayFor(model => model.GiaMoiBuoi)</dd>

        <dt>Ngày đăng ký</dt>
        <dd>@Html.DisplayFor(model => model.NgayDangKy)</dd>

        <dt>Trạng thái</dt>
        <dd>@Html.DisplayFor(model => model.TrangThai)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div style="margin-top: 20px;">
            <input type="submit" value="Xóa" class="btn-delete" />
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn-back" })
        </div>
    }
</div>
