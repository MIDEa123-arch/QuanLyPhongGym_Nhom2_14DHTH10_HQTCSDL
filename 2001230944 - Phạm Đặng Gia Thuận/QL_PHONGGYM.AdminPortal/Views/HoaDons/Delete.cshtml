@model QL_PHONGGYM.AdminPortal.Models.HoaDon

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .delete-container {
        background: #e8f1ff; /* xanh dương rất nhạt */
        padding: 25px;
        border-radius: 10px;
        border: 1px solid #c7dcff;
        max-width: 600px;
        margin: 20px auto;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    h2, h3, h4 {
        color: #1a4fa3; /* xanh dương đậm */
    }

    dt {
        font-weight: bold;
        color: #0c3c85;
    }

    dd {
        margin-bottom: 10px;
    }

    .btn-default {
        background-color: #3f7cdb;
        color: white;
        border-radius: 5px;
        padding: 6px 15px;
        border: none;
    }

        .btn-default:hover {
            background-color: #2f69c4;
            color: #fff;
        }

    a {
        color: #1a4fa3;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h2>Xóa hóa đơn</h2>

<h3>Bạn có chắc chắn muốn xóa?</h3>

<div class="delete-container">
    <h4>Thông tin hóa đơn</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.KhachHang.TenKH)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.KhachHang.TenKH)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NgayLap)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.NgayLap)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TongTien)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TongTien)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.GiamGia)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GiamGia)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ThanhTien)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ThanhTien)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TrangThai)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TrangThai)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn-default" /> |
            @Html.ActionLink("Quay lại danh sách", "Index")
        </div>
    }
</div>
