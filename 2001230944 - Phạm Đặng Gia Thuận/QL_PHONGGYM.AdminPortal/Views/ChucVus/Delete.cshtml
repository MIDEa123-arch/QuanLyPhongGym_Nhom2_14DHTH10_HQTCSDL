@model QL_PHONGGYM.AdminPortal.Models.ChucVu

@{
    ViewBag.Title = "Xóa Chức Vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .content-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        overflow: hidden;
        max-width: 600px;
        margin: 30px auto;
    }

    /* Header màu đỏ để cảnh báo */
    .card-header-danger {
        background-color: #fee2e2;
        color: #b91c1c;
        padding: 20px;
        border-bottom: 1px solid #fecaca;
        text-align: center;
    }

        .card-header-danger h2 {
            margin: 0 0 10px 0;
            font-size: 24px;
        }

        .card-header-danger p {
            margin: 0;
            font-size: 14px;
        }

    .card-body {
        padding: 20px;
    }

    /* CSS cho thông tin chi tiết */
    .dl-horizontal dt {
        float: left;
        width: 140px;
        clear: left;
        text-align: right;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        font-weight: bold;
        color: #555;
        margin-right: 20px;
    }

    .dl-horizontal dd {
        margin-bottom: 10px;
        color: #333;
    }

    /* Nút bấm */
    .btn-danger {
        background-color: #dc2626;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        font-weight: 600;
    }

        .btn-danger:hover {
            background-color: #b91c1c;
        }

    .btn-default {
        background-color: #e5e7eb;
        color: #374151;
        padding: 10px 25px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        font-weight: 600;
    }

        .btn-default:hover {
            background-color: #d1d5db;
        }

    .form-actions {
        text-align: center;
        margin-top: 20px;
        border-top: 1px solid #eee;
        padding-top: 20px;
    }

    /* CSS cho thông báo lỗi (QUAN TRỌNG NHẤT) */
    .validation-summary-errors {
        background-color: #fef2f2;
        border: 1px solid #f87171;
        color: #991b1b;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        text-align: left;
    }

        .validation-summary-errors ul {
            margin: 0;
            padding-left: 20px;
        }
</style>

<div class="content-card">
    <div class="card-header-danger">
        <h2>🗑️ Xóa Chức Vụ</h2>
        <p>Bạn có chắc chắn muốn xóa chức vụ này không?</p>
        <p style="font-size: 12px; margin-top: 5px;">(Lưu ý: Nếu xóa, các nhân viên thuộc chức vụ này sẽ bị mất chức danh)</p>
    </div>

    <div class="card-body">

        <!--
          =======================================================
          == ĐÂY LÀ DÒNG SẼ HIỂN THỊ LÝ DO TẠI SAO KHÔNG XÓA ĐƯỢC ==
          =======================================================
        -->
        @Html.ValidationSummary(false, "Không thể xóa chức vụ này:", new { @class = "text-danger" })


        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.TenChucVu)</dt>
            <dd>@Html.DisplayFor(model => model.TenChucVu)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" class="btn-danger">Xác nhận Xóa</button>
                @Html.ActionLink("Hủy / Quay lại", "Index", null, new { @class = "btn-default" })
            </div>
        }
    </div>
</div>