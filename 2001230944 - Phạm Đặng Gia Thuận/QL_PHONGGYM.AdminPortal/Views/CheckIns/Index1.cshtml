@model IEnumerable<QL_PHONGGYM.AdminPortal.Models.CheckIn>
@{
    ViewBag.Title = "Index1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container-custom {
        padding: 30px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        background: #5dade2;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .page-header h2 {
        color: white;
        margin: 0;
        font-weight: 500;
        font-size: 26px;
    }

    .btn-create {
        background: #5dade2;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 500;
        display: inline-block;
        transition: all 0.3s;
        border: none;
    }

    .btn-create:hover {
        background: #3498db;
        color: white;
        text-decoration: none;
    }

    .table-container {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        overflow-x: auto;
    }

    .table {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
    }

    .table thead {
        background: #5dade2;
    }

    .table thead th {
        color: white;
        font-weight: 500;
        padding: 15px;
        border: none;
        text-align: left;
        font-size: 14px;
        white-space: nowrap;
       
    }

    .table tbody th
    {
        text-align:left;
        padding:10px;
    }
    .table tbody tr {
        border-bottom: 1px solid #e9ecef;
        transition: all 0.3s;
    }

    .table tbody tr:hover {
        background: #f0f8ff;
    }

    .table tbody td {
        padding: 15px;
        vertical-align: middle;
        font-size: 14px;
    }

    .table tbody td:first-child {
        font-weight: 600;
    }

    .table tbody td a {
        padding: 6px 15px;
        border-radius: 20px;
        text-decoration: none;
        font-size: 13px;
        font-weight: 500;
        transition: all 0.3s;
        display: inline-block;
        background: #4CAF50;
        color: white;
    }

    .table tbody td a:hover {
        background: #45a049;
    }

    @@media (max-width: 768px) {
        .container-custom {
            padding: 20px;
        }

        .table-container {
            padding: 15px;
        }

        .page-header {
            padding: 20px;
        }

        .page-header h2 {
            font-size: 22px;
        }
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h2>📋 Lịch Sử Check-in</h2>
    </div>

    <p style="margin-bottom: 20px;">
        @Html.ActionLink("➕ Thêm Check-in Mới", "Create", null, new { @class = "btn-create" })
    </p>

    <div class="table-container">
        <table class="table">
            <tr>
                <th>
                    Tên Khách Hàng
                </th>
                <th>
                    Thời Gian Vào
                </th>
                <th>
                    Thời Gian Ra
                </th>
                <th>
                    Trạng Thái
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThoiGianVao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThoiGianRa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrangThai)
                    </td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaCheckIn })
                      
                    </td>
                </tr>
            }
        </table>
    </div>
</div>