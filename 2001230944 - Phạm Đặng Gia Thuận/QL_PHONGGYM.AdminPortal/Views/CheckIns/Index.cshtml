@model IEnumerable<QL_PHONGGYM.AdminPortal.Models.CheckIn>
@{
    ViewBag.Title = "Index1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container-custom {
        padding: 30px;
        background: #f4f9ff;
        min-height: 100vh;
    }

    .page-header {
        background: #5dade2;
        padding: 25px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

        .page-header h2 {
            color: white;
            margin: 0;
            font-weight: 500;
            font-size: 26px;
        }

    .btn-create {
        background: #5dade2;
        color: white;
        padding: 10px 20px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s;
        border: none;
    }

        .btn-create:hover {
            background: #3498db;
            color: white;
        }

    .table-container {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        overflow-x: auto;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    thead {
        background: #e3f2fd;
    }

    th {
        color: #1a5276;
        font-weight: 600;
        padding: 12px 15px;
        text-align: left;
        font-size: 14px;
        border-bottom: 2px solid #d6eaf8;
    }

    td {
        padding: 12px 15px;
        vertical-align: middle;
        font-size: 14px;
        color: #2c3e50;
        border-bottom: 1px solid #f0f0f0;
    }

    tr:hover {
        background: #f9fcff;
    }

    /* ---- Nút hành động ---- */
    .action-edit {
        background: #4CAF50;
        color: white;
    }

    .action-details {
        background: #5dade2;
        color: white;
    }

    .action-delete {
        background: #e74c3c;
        color: white;
    }

    .action-btn {
        padding: 6px 14px;
        border-radius: 20px;
        text-decoration: none;
        font-size: 13px;
        font-weight: 500;
        margin: 0 2px;
        display: inline-block;
        transition: all 0.3s;
    }

    .action-edit:hover {
        background: #45a049;
    }

    .action-details:hover {
        background: #3498db;
    }

    .action-delete:hover {
        background: #c0392b;
    }

    @@media (max-width: 768px) {
        .container-custom {
            padding: 20px;
        }

        .page-header {
            padding: 15px;
        }

            .page-header h2 {
                font-size: 22px;
            }
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h2>📋 Lịch Sử Check-in</h2>
    </div>

    <p style="margin-bottom: 20px;">
        @Html.ActionLink("➕ Thêm Check-in Mới", "Create", null, new { @class = "btn-create" })
    </p>

    <div class="table-container">
        <table class="table">
            <tr>
                <th>
                    Tên Khách Hàng
                </th>
                <th>
                    Thời Gian Vào
                </th>
                <th>
                    Thời Gian Ra
                </th>
                <th>
                    Trạng Thái
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThoiGianVao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThoiGianRa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrangThai)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MaCheckIn }) |
                        @Html.ActionLink("Details", "Details", new { id = item.MaCheckIn }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MaCheckIn }) |
                    </td>
                </tr>
            }
        </table>
    </div>
</div>