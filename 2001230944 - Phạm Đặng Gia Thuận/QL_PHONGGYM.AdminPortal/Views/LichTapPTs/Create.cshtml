@model QL_PHONGGYM.AdminPortal.Models.LichTapPT

@{
    ViewBag.Title = "Tạo Lịch Tập PT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ============================
       STYLE MÀU XANH DƯƠNG NHẠT
    ============================ */

    .create-card {
        background: #f0f6ff;
        padding: 25px;
        border-radius: 10px;
        border: 1px solid #d0e3ff;
        max-width: 750px;
        margin: 20px auto;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .create-title {
        font-size: 24px;
        color: #0a53be;
        font-weight: bold;
        margin-bottom: 8px;
    }

    .create-sub {
        font-size: 15px;
        color: #3d6fc2;
        margin-bottom: 18px;
    }

    .form-custom .form-group {
        margin-bottom: 18px;
    }

    .form-custom label {
        font-weight: 600;
        color: #0d4ea6;
        margin-bottom: 5px;
        display: inline-block;
    }

    .form-custom .form-control {
        border-radius: 6px;
        border: 1px solid #c5d9ff;
        box-shadow: none;
        padding: 8px 10px;
        transition: 0.2s;
    }

        .form-custom .form-control:focus {
            border-color: #6aa6ff;
            box-shadow: 0 0 5px rgba(58,126,255,0.4);
        }

    .btn-save {
        background: #0d6efd;
        color: white !important;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 15px;
        transition: 0.2s;
    }

        .btn-save:hover {
            background: #0b5ed7;
            cursor: pointer;
        }

    .btn-back {
        background: #6c757d;
        color: white !important;
        padding: 10px 16px;
        border-radius: 6px;
        text-decoration: none;
        margin-left: 10px;
        transition: 0.2s;
    }

        .btn-back:hover {
            background: #5a6268;
        }
</style>


<div class="create-card">
    <h2 class="create-title">➕ Thêm Lịch Tập PT</h2>
    <p class="create-sub">Nhập đầy đủ thông tin để tạo lịch tập mới.</p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-custom">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <label>Mã Lịch PT</label>
                @Html.EditorFor(model => model.MaLichPT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaLichPT, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Chọn Đăng Ký PT</label>
                @Html.DropDownList("MaDKPT", null, "--- Chọn gói PT đã đăng ký ---", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaDKPT, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Ngày Tập</label>
                @Html.EditorFor(model => model.NgayTap, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.NgayTap, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Giờ Bắt Đầu</label>
                @Html.EditorFor(model => model.GioBatDau, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                @Html.ValidationMessageFor(model => model.GioBatDau, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Giờ Kết Thúc</label>
                @Html.EditorFor(model => model.GioKetThuc, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                @Html.ValidationMessageFor(model => model.GioKetThuc, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label>Trạng Thái</label>
                @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn-save">
                <i class="uil uil-check"></i> Tạo Lịch Tập
            </button>
            @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn-back" })
        </div>
    }
</div>
