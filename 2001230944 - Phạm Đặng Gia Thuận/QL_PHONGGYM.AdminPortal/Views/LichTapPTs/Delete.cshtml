@model QL_PHONGGYM.AdminPortal.Models.LichTapPT

@{
    ViewBag.Title = "Xóa Lịch Tập PT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* ============================
       GIAO DIỆN MÀU XANH DƯƠNG NHẠT
    ============================ */

    .delete-card {
        background: #f0f6ff; /* xanh dương nhạt */
        padding: 25px;
        border-radius: 10px;
        border: 1px solid #d0e3ff;
        max-width: 750px;
        margin: 0 auto;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .delete-title {
        font-size: 24px;
        color: #0a53be;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .delete-sub {
        font-size: 15px;
        color: #3d6fc2;
        margin-bottom: 20px;
    }

    table.detail-table {
        width: 100%;
        border-collapse: collapse;
        background: white;
        border-radius: 8px;
        overflow: hidden;
        margin-bottom: 20px;
    }

    .detail-table th {
        background: #e3eeff;
        width: 200px;
        padding: 10px;
        text-align: left;
        font-weight: 600;
        color: #0d4ea6;
        border-bottom: 1px solid #d5e4ff;
    }

    .detail-table td {
        padding: 10px;
        border-bottom: 1px solid #e8f0ff;
        color: #1d1d1d;
    }

    .delete-actions {
        margin-top: 15px;
        display: flex;
        gap: 10px;
    }

    .btn-delete {
        background: #e61e44;
        color: white !important;
        padding: 10px 18px;
        border-radius: 6px;
        font-size: 15px;
        border: none;
        cursor: pointer;
        transition: 0.2s;
    }

        .btn-delete:hover {
            background: #c71538;
        }

    .btn-back {
        background: #0d6efd;
        color: white !important;
        padding: 10px 18px;
        border-radius: 6px;
        font-size: 15px;
        text-decoration: none;
        display: inline-block;
        transition: 0.2s;
    }

        .btn-back:hover {
            background: #0b5ed7;
        }
</style>


<div class="delete-card">
    <div>
        <h2 class="delete-title">
            <i class="uil uil-trash-alt"></i> Xóa Lịch Tập PT
        </h2>
        <p class="delete-sub">Bạn có chắc muốn xóa lịch tập này? Thao tác không thể hoàn tác.</p>
    </div>

    <table class="detail-table">
        <tr>
            <th>Mã Lịch PT</th>
            <td>@Model.MaLichPT</td>
        </tr>
        <tr>
            <th>Mã Đăng Ký PT</th>
            <td>@Model.DangKyPT?.MaDKPT</td>
        </tr>
        <tr>
            <th>Ngày Tập</th>
            <td>@Model.NgayTap.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <th>Giờ Bắt Đầu</th>
            <td>@Model.GioBatDau</td>
        </tr>
        <tr>
            <th>Giờ Kết Thúc</th>
            <td>@Model.GioKetThuc</td>
        </tr>
        <tr>
            <th>Trạng Thái</th>
            <td>@Model.TrangThai</td>
        </tr>
    </table>


    <div class="delete-actions">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <button type="submit" class="btn-delete">
                <i class="uil uil-trash"></i> Xóa
            </button>
        }

        @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn-back" })
    </div>
</div>
