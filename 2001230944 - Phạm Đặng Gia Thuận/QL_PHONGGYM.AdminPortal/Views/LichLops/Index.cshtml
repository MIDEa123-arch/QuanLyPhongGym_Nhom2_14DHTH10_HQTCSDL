@model IEnumerable<QL_PHONGGYM.AdminPortal.Models.LichLop>
@{
    ViewBag.Title = "Quản Lý Lịch Lớp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container-custom {
        padding: 30px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        background: #5dade2;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

    .page-header h2 {
        color: white;
        margin: 0;
        font-weight: 500;
        font-size: 26px;
    }

    .btn-create {
        background: #5dade2;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 500;
        display: inline-block;
        transition: all 0.3s;
        border: none;
    }

    .btn-create:hover {
        background: #3498db;
        color: white;
        text-decoration: none;
    }

    .table-container {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        overflow-x: auto;
    }

    .table-custom {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
    }

    .table-custom thead {
        background: #5dade2;
    }

    .table-custom thead th {
        color: white;
        font-weight: 500;
        padding: 15px;
        border: none;
        text-align: left;
        font-size: 14px;
        white-space: nowrap;
    }

    .table-custom tbody tr {
        border-bottom: 1px solid #e9ecef;
        transition: all 0.3s;
    }

    .table-custom tbody tr:hover {
        background: #f0f8ff;
    }

    .table-custom tbody td {
        padding: 15px;
        vertical-align: middle;
        font-size: 14px;
        white-space: nowrap;
    }

    .table-custom tbody td:last-child {
        white-space: normal;
    }

    .action-links a {
        padding: 6px 15px;
        border-radius: 20px;
        text-decoration: none;
        font-size: 13px;
        font-weight: 500;
        transition: all 0.3s;
        display: inline-block;
        margin: 2px;
    }

    .action-links .btn-edit {
        background: #4CAF50;
        color: white;
    }

    .action-links .btn-edit:hover {
        background: #45a049;
    }

    .action-links .btn-delete {
        background: #f44336;
        color: white;
    }

    .action-links .btn-delete:hover {
        background: #da190b;
    }

    .badge {
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-info {
        background: #17a2b8;
        color: white;
    }

    .text-muted {
        color: #6c757d;
        font-style: italic;
    }

    @@media (max-width: 768px) {
        .container-custom {
            padding: 20px;
        }

        .table-container {
            padding: 15px;
        }

        .page-header {
            padding: 20px;
        }

        .page-header h2 {
            font-size: 22px;
        }
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h2>📅 Quản Lý Lịch Lớp Học</h2>
    </div>

    <p style="margin-bottom: 20px;">
        @Html.ActionLink("➕ Thêm Lịch Lớp Mới", "Create", null, new { @class = "btn-create" })
    </p>

    <div class="table-container">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Ngày Học</th>
                    <th>Giờ Bắt Đầu</th>
                    <th>Giờ Kết Thúc</th>
                    <th>Lớp Học</th>
                    <th>Giáo Viên</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.NgayHoc.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @item.GioBatDau.ToString(@"hh\:mm")
                        </td>
                        <td>
                            @item.GioKetThuc.ToString(@"hh\:mm")
                        </td>
                        <td>
                            <strong>@Html.DisplayFor(modelItem => item.LopHoc.TenLop)</strong>
                        </td>
                        <td>
                            @if (item.NhanVien != null)
                            {
                                <span class="badge badge-info">@item.NhanVien.TenNV</span>
                            }
                            else
                            {
                                <span class="text-muted">Chưa xếp</span>
                            }
                        </td>
                        <td class="action-links">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.MaLichLop }, new { @class = "btn-edit" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.MaLichLop }, new { @class = "btn-delete" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>