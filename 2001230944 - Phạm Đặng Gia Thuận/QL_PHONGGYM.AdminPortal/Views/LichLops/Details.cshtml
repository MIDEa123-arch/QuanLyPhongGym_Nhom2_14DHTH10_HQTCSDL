@model QL_PHONGGYM.AdminPortal.Models.LichLop

@{
    ViewBag.Title = "Chi Tiết Lịch Lớp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .details-card {
        background: #f0f6ff;
        padding: 25px;
        border-radius: 10px;
        border: 1px solid #d0e3ff;
        max-width: 750px;
        margin: 20px auto;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }

    .details-title {
        font-size: 24px;
        font-weight: bold;
        color: #0a53be;
        margin-bottom: 10px;
    }

    .details-sub {
        font-size: 15px;
        color: #3d6fc2;
        margin-bottom: 20px;
    }

    .details-table dt {
        font-weight: 600;
        color: #0d4ea6;
        width: 160px;
        padding: 8px 0;
    }

    .details-table dd {
        margin-left: 180px;
        padding: 8px 0;
        color: #00315c;
        font-weight: 500;
    }

    .btn-edit {
        background: #0d6efd;
        color: white !important;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        transition: 0.2s;
    }

        .btn-edit:hover {
            background: #0b5ed7;
        }

    .btn-back {
        background: #6c757d;
        color: white !important;
        padding: 10px 16px;
        border-radius: 6px;
        text-decoration: none;
        margin-left: 10px;
        transition: 0.2s;
    }

        .btn-back:hover {
            background: #5a6268;
        }
</style>


<div class="details-card">
    <div class="details-title">📘 Chi Tiết Lịch Lớp</div>
    <div class="details-sub">Thông tin chi tiết lớp học và lịch giảng dạy.</div>

    <dl class="details-table dl-horizontal">
        <dt>Lớp học</dt>
        <dd>@Html.DisplayFor(model => model.LopHoc.TenLop)</dd>

        <dt>Giáo viên</dt>
        <dd>@Html.DisplayFor(model => model.NhanVien.TenNV)</dd>

        <dt>Ngày học</dt>
        <dd>@Html.DisplayFor(model => model.NgayHoc)</dd>

        <dt>Giờ bắt đầu</dt>
        <dd>@Html.DisplayFor(model => model.GioBatDau)</dd>

        <dt>Giờ kết thúc</dt>
        <dd>@Html.DisplayFor(model => model.GioKetThuc)</dd>

       
        
    </dl>

    <div style="margin-top: 20px;">
        @Html.ActionLink("✏ Sửa", "Edit", new { id = Model.MaLichLop }, new { @class = "btn-edit" })
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn-back" })
    </div>
</div>
