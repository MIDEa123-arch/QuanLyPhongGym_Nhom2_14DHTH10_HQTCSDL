@model IEnumerable<QL_PHONGGYM.AdminPortal.Models.NhanVien>

@{
    ViewBag.Title = "Quản Lý Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Giữ nguyên Style cũ */
    .container-custom {
        padding: 30px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        background: #5dade2;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

        .page-header h2 {
            color: white;
            margin: 0 0 10px 0;
            font-weight: 500;
            font-size: 26px;
        }

        .page-header p {
            color: rgba(255,255,255,0.9);
            margin: 0;
            font-size: 14px;
        }

    .table-container {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        overflow-x: auto;
    }

    .table-custom {
        width: 100%;
        margin: 0;
        border-collapse: collapse;
    }

        .table-custom thead {
            background: #5dade2;
        }

            .table-custom thead th {
                color: white;
                font-weight: 500;
                padding: 15px;
                border: none;
                text-align: left;
                font-size: 14px;
                white-space: nowrap;
            }

        .table-custom tbody tr {
            border-bottom: 1px solid #e9ecef;
            transition: all 0.3s;
        }

            .table-custom tbody tr:hover {
                background: #f0f8ff;
            }

        .table-custom tbody td {
            padding: 15px;
            vertical-align: middle;
            font-size: 14px;
        }

    .action-links a {
        padding: 6px 15px;
        border-radius: 20px;
        text-decoration: none;
        font-size: 13px;
        font-weight: 500;
        transition: all 0.3s;
        display: inline-block;
        margin: 2px;
    }

    .action-links .btn-edit {
        background: #4CAF50;
        color: white;
    }

        .action-links .btn-edit:hover {
            background: #45a049;
        }

    .action-links .btn-details {
        background: #2196F3;
        color: white;
    }

        .action-links .btn-details:hover {
            background: #0b7dda;
        }

    .action-links .btn-delete {
        background: #f44336;
        color: white;
    }

        .action-links .btn-delete:hover {
            background: #da190b;
        }

    .badge {
        padding: 5px 12px;
        border-radius: 15px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-info {
        background: #17a2b8;
        color: white;
    }

    .badge-warning {
        background: #ffc107;
        color: #333;
    }

    .badge-success {
        background: #28a745;
        color: white;
    }

    .text-muted {
        color: #6c757d;
        font-style: italic;
    }

    .username-text {
        font-size: 12px;
        color: #888;
    }

    /* CSS MỚI CHO THANH TÌM KIẾM */
    .toolbar-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        gap: 15px;
        flex-wrap: wrap;
    }

    .search-form {
        display: flex;
        gap: 10px;
        background: white;
        padding: 5px 10px;
        border-radius: 6px;
        border: 1px solid #ddd;
        flex-grow: 1;
        max-width: 400px;
    }

    .search-input {
        border: none;
        outline: none;
        padding: 8px;
        width: 100%;
        font-size: 14px;
    }

    .btn-search-icon {
        background: none;
        border: none;
        color: #5dade2;
        font-size: 18px;
        cursor: pointer;
    }

    .btn-create {
        background: #5dade2;
        color: white;
        padding: 10px 25px;
        border-radius: 5px;
        text-decoration: none;
        font-weight: 500;
        display: inline-block;
        transition: all 0.3s;
        border: none;
        white-space: nowrap;
    }

        .btn-create:hover {
            background: #3498db;
            color: white;
            text-decoration: none;
        }

    @@media (max-width: 768px) {
        .container-custom {
            padding: 20px;
        }

        .table-container {
            padding: 15px;
        }

        .page-header {
            padding: 20px;
        }

            .page-header h2 {
                font-size: 22px;
            }

        .toolbar-container {
            flex-direction: column;
            align-items: stretch;
        }

        .search-form {
            max-width: 100%;
        }
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h2>👥 Quản Lý Nhân Viên</h2>
        <p>Danh sách tất cả nhân viên trong hệ thống.</p>
    </div>

    <!-- KHU VỰC TOOLBAR (TÌM KIẾM + THÊM MỚI) -->
    <div class="toolbar-container">
        <!-- Form Tìm Kiếm -->
        @using (Html.BeginForm("Index", "NhanViens", FormMethod.Get, new { @class = "search-form" }))
        {
            <input type="text" name="searchString" class="search-input" placeholder="Tìm nhân viên theo tên..." value="@Request.QueryString["searchString"]" />
            <button type="submit" class="btn-search-icon">
                <i class="uil uil-search"></i>
            </button>
            if (!string.IsNullOrEmpty(Request.QueryString["searchString"]))
            {
                <a href="@Url.Action("Index")" style="display:flex; align-items:center; color:#999; text-decoration:none; margin-left:5px;">
                    <i class="uil uil-times"></i>
                </a>
            }
        }

        <!-- Nút Thêm Mới -->
        @Html.ActionLink("➕ Thêm Nhân Viên Mới", "Create", null, new { @class = "btn-create" })
    </div>

    <div class="table-container">
        <table class="table-custom">
            <thead>
                <tr>
                    <th>Tên Nhân Viên</th>
                    <th>Chức Vụ</th>
                    <th>Số Điện Thoại</th>
                    <th>Ngày Sinh</th>
                    <th>Giới Tính</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() == 0)
                {
                    <tr>
                        <td colspan="6" style="text-align:center; padding: 30px; color: #999;">
                            Không tìm thấy nhân viên nào phù hợp.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.TenNV)</strong>
                                <br />
                                <span class="username-text">👤 @item.TenDangNhap</span>
                            </td>
                            <td>
                                @if (item.ChucVu != null)
                                {
                                    if (item.ChucVu.TenChucVu == "PT")
                                    {
                                        <span class="badge badge-info">PT</span>
                                    }
                                    else if (item.ChucVu.TenChucVu == "Quản lý")
                                    {
                                        <span class="badge badge-warning">Quản lý</span>
                                    }
                                    else
                                    {
                                        <span class="badge" style="background: #f1f5f9; color: #475569;">@item.ChucVu.TenChucVu</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Chưa phân công</span>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SDT)
                            </td>
                            <td>
                                @if (item.NgaySinh.HasValue)
                                {
                                    @item.NgaySinh.Value.ToString("dd/MM/yyyy")
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GioiTinh)
                            </td>
                            <td class="action-links">
                                @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }, new { @class = "btn-edit" })
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNV }, new { @class = "btn-details" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.MaNV }, new { @class = "btn-delete" })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>