@model QL_PHONGGYM.AdminPortal.Models.NhanVien

@{
    ViewBag.Title = "Chi Tiết Nhân Viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container-custom {
        padding: 30px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        background: #5dade2;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

        .page-header h2 {
            color: white;
            margin: 0;
            font-weight: 500;
            font-size: 26px;
        }

    .details-container {
        background: white;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        max-width: 800px;
        margin: 0 auto;
    }

    .details-title {
        color: #5dade2;
        font-size: 20px;
        font-weight: 500;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #5dade2;
    }

    .details-group {
        margin-bottom: 20px;
    }

        .details-group label {
            display: block;
            color: #333;
            font-weight: 500;
            margin-bottom: 8px;
            font-size: 14px;
        }

    .details-value {
        background: #f4f6f7;
        padding: 10px 15px;
        border-radius: 5px;
        border: 1px solid #e0e0e0;
        font-size: 14px;
        color: #333;
    }

    .btn-edit, .btn-back {
        border: none;
        border-radius: 5px;
        padding: 10px 25px;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s;
        color: white;
        margin-top: 20px;
        margin-right: 10px;
    }

    .btn-edit {
        background: #5dade2;
    }

        .btn-edit:hover {
            background: #3498db;
        }

    .btn-back {
        background: #6c757d;
    }

        .btn-back:hover {
            background: #5a6268;
        }

    @@media (max-width: 768px) {
        .details-container {
            padding: 20px;
        }

        .page-header {
            padding: 20px;
        }

            .page-header h2 {
                font-size: 22px;
            }
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h2>Chi Tiết Nhân Viên</h2>
    </div>

    <div class="details-container">
        <h4 class="details-title">Thông Tin Nhân Viên</h4>

        <div class="details-group">
            <label>Tên nhân viên</label>
            <div class="details-value">@Model.TenNV</div>
        </div>
        <!-- Chức vụ -->
        <div class="details-group">
            <label>Chức vụ</label>
            <div class="details-value">
                @(Model.ChucVu != null && !string.IsNullOrWhiteSpace(Model.ChucVu.TenChucVu)
            ? Model.ChucVu.TenChucVu
            : "Không có dữ liệu")
            </div>
        </div>

        <div class="details-group">
            <label>Tên đăng nhập</label>
            <div class="details-value">@Model.TenDangNhap</div>
        </div>

        <div class="details-group">
            <label>Mật khẩu</label>
            <div class="details-value">@Model.MatKhau</div>
        </div>

        <div class="details-group">
            <label>Tên nhân viên</label>
            <div class="details-value">@Model.TenNV</div>
        </div>

        <div class="details-group">
            <label>Giới tính</label>
            <div class="details-value">@Model.GioiTinh</div>
        </div>

        <div class="details-group">
            <label>Số điện thoại</label>
            <div class="details-value">@Model.SDT</div>
        </div>

        <!-- Ngày sinh -->
        <div class="details-group">
            <label>Ngày sinh</label>
            <div class="details-value">
                @(Model.NgaySinh.HasValue
            ? Model.NgaySinh.Value.ToString("dd/MM/yyyy")
            : "Không có dữ liệu")
            </div>
        </div>

        <div>

            @Html.ActionLink("Quay Lại", "Index", null, new { @class = "btn-back" })
        </div>
    </div>
</div>
