@model QL_PHONGGYM.AdminPortal.Models.DangKyLop

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: #e8f3ff; /* xanh dương nhạt */
        font-family: Arial, sans-serif;
    }

    h2 {
        color: #0b67c2;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .form-container {
        background: #ffffff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0px 3px 10px rgba(0,0,0,0.1);
        max-width: 700px;
        margin: auto;
        border-left: 6px solid #4aa3ff;
    }

    label {
        font-weight: bold;
        color: #0a4f91;
    }

    .form-control {
        border-radius: 6px;
        border: 1px solid #a7c8ef;
        transition: 0.2s;
    }

        .form-control:focus {
            border-color: #2e8cff;
            box-shadow: 0 0 5px rgba(46,140,255,0.5);
        }

    .btn-primary-custom {
        background: #2e8cff;
        color: white;
        padding: 8px 20px;
        border-radius: 6px;
        border: none;
        transition: 0.2s;
    }

        .btn-primary-custom:hover {
            background: #0864c7;
        }

    a {
        color: #0b67c2;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h2>Edit Đăng Ký Lớp</h2>

<div class="form-container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.MaDKLop)

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.MaKH, "Khách Hàng")
            @Html.DropDownList("MaKH", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MaLop, "Lớp Tập")
            @Html.DropDownList("MaLop", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MaLop, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NgayDangKy)
            @Html.EditorFor(model => model.NgayDangKy, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.NgayDangKy, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TrangThai)
            @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn-primary-custom">Save</button>
    }

</div>

<br />
@Html.ActionLink("← Back to List", "Index")
