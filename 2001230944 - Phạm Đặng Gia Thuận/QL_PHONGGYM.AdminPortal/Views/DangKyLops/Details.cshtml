@model QL_PHONGGYM.AdminPortal.Models.DangKyLop

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: #e8f3ff;
        font-family: Arial, sans-serif;
    }

    h2 {
        color: #0b67c2;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .details-container {
        background: #ffffff;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0px 3px 10px rgba(0,0,0,0.1);
        max-width: 700px;
        margin: auto;
        border-left: 6px solid #4aa3ff;
    }

    dt {
        font-weight: bold;
        color: #0a4f91;
        margin-top: 10px;
    }

    dd {
        margin-bottom: 10px;
        padding-left: 5px;
        color: #333;
    }

    a {
        color: #0b67c2;
        font-weight: bold;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h2>Chi tiết đăng ký lớp</h2>

<div class="details-container">
    <dl class="dl-horizontal">

        <dt>Khách hàng</dt>
        <dd>@Html.DisplayFor(model => model.KhachHang.TenKH)</dd>

        <dt>Lớp học</dt>
        <dd>@Html.DisplayFor(model => model.LopHoc.TenLop)</dd>

        <dt>Ngày đăng ký</dt>
        <dd>@Html.DisplayFor(model => model.NgayDangKy)</dd>

        <dt>Trạng thái</dt>
        <dd>@Html.DisplayFor(model => model.TrangThai)</dd>

    </dl>

    <br />

    <p>
        @Html.ActionLink("✏ Edit", "Edit", new { id = Model.MaDKLop }) |
        @Html.ActionLink("← Back to List", "Index")
    </p>
</div>
