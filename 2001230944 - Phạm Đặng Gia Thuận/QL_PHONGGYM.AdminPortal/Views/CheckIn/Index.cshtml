@{
    ViewBag.Title = "Check-in";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var checkInStatus = TempData["CheckInStatus"] as string;
    var checkInMessage = TempData["CheckInMessage"] as string;
}

<style>
    .container-custom {
        padding: 30px;
        background: #f8f9fa;
        min-height: 100vh;
    }

    .page-header {
        background: #5dade2;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        text-align: center;
    }

    .page-header h2 {
        color: white;
        margin: 0 0 10px 0;
        font-weight: 500;
        font-size: 26px;
    }

    .page-description {
        color: black !important; 
        margin: 0;
        font-size: 15px;
    }

    .content-card {
        background: white;
        border-radius: 10px;
        padding: 30px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.08);
        max-width: 600px;
        margin: 0 auto;
    }

    /* Alert Styles */
    .alert-modern {
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 25px;
        border-left: 4px solid;
    }

    .alert-modern h4 {
        font-size: 16px;
        font-weight: 600;
        margin: 0 0 8px 0;
    }

    .alert-modern p {
        margin: 0;
        font-size: 14px;
    }

    .alert-success {
        background: #d4edda;
        border-color: #28a745;
        color: #155724;
    }

    .alert-warning {
        background: #fff3cd;
        border-color: #ffc107;
        color: #856404;
    }

    .alert-danger {
        background: #f8d7da;
        border-color: #dc3545;
        color: #721c24;
    }

    .alert-info {
        background: #d1ecf1;
        border-color: #17a2b8;
        color: #0c5460;
    }

    /* Form Styles */
    .checkin-form {
        margin-bottom: 30px;
    }

    .form-group-modern {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        color: #333;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-control-modern {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 15px;
        transition: border-color 0.3s;
    }

    .form-control-modern:focus {
        outline: none;
        border-color: #5dade2;
        box-shadow: 0 0 0 3px rgba(93, 173, 226, 0.1);
    }

    .form-hint {
        display: block;
        margin-top: 8px;
        color: #6c757d;
        font-size: 13px;
    }

    /* Button Styles */
    .form-actions-modern {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    .btn {
        padding: 12px 30px;
        font-size: 15px;
        font-weight: 500;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
        flex: 1;
    }

    .btn-checkin {
        background: #5dade2;
        color: white;
    }

    .btn-checkin:hover {
        background: #3498db;
    }

    .btn-reset {
        background: #6c757d;
        color: white;
    }

    .btn-reset:hover {
        background: #5a6268;
    }

    /* Info Section */
    .info-section {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 15px;
        margin-top: 30px;
        padding-top: 25px;
        border-top: 1px solid #e9ecef;
    }

    .info-card {
        text-align: center;
        padding: 20px 15px;
        background: #f8f9fa;
        border-radius: 8px;
        transition: all 0.3s;
    }

    .info-card:hover {
        background: #e9ecef;
    }

    .info-card h5 {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        margin: 10px 0 5px 0;
    }

    .info-card p {
        font-size: 13px;
        color: #6c757d;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .container-custom {
            padding: 20px;
        }

        .page-header {
            padding: 20px;
        }

        .page-header h2 {
            font-size: 22px;
        }

        .content-card {
            padding: 20px;
        }

        .form-actions-modern {
            flex-direction: column;
        }

        .info-section {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="container-custom">
    <div class="page-header">
        <h2>✓ Công cụ Check-in</h2>
        <p class="page-description">Nhập Mã Khách Hàng hoặc Số Điện Thoại để thực hiện check-in nhanh chóng</p>
    </div>

    <div class="content-card">
        @if (!string.IsNullOrEmpty(checkInMessage))
        {
            string alertClass = "alert-info";

            if (checkInStatus == "success")
            {
                alertClass = "alert-success";
            }
            else if (checkInStatus == "warning")
            {
                alertClass = "alert-warning";
            }
            else if (checkInStatus == "error")
            {
                alertClass = "alert-danger";
            }

            <div class="alert-modern @alertClass">
                <h4>Kết quả Check-in</h4>
                <p>@checkInMessage</p>
            </div>
        }

        @using (Html.BeginForm("CheckIn", "CheckIn", FormMethod.Post, new { @class = "checkin-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group-modern">
                <label for="maKhachHang" class="form-label">
                    Mã Khách Hàng / Số Điện Thoại
                </label>
                <input type="text"
                       name="maKhachHang"
                       id="maKhachHang"
                       class="form-control-modern"
                       placeholder="Nhập mã khách hàng hoặc số điện thoại..."
                       autocomplete="off"
                       required />
                <small class="form-hint">Ví dụ: MaKH:'1','2','3'... hoặc 0912345678</small>
            </div>

            <div class="form-actions-modern">
                <button type="submit" class="btn btn-checkin">
                    Thực hiện Check-in
                </button>
                <button type="reset" class="btn btn-reset">
                    Làm mới
                </button>
            </div>
        }

        <div class="info-section">
            <div class="info-card">
                <h5>⚡ Nhanh chóng</h5>
                <p>Check-in chỉ trong vài giây</p>
            </div>
            <div class="info-card">
                <h5>🔒 Bảo mật</h5>
                <p>Thông tin được bảo vệ an toàn</p>
            </div>
            <div class="info-card">
                <h5>✔ Dễ dàng</h5>
                <p>Giao diện đơn giản, dễ sử dụng</p>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const input = document.getElementById('maKhachHang');
        if (input) {
            input.focus();
        }
    });
</script>